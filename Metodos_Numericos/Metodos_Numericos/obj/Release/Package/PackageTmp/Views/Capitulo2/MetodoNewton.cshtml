@model Metodos_Numericos.Models.MetodoNewton_Model

@{
    ViewBag.Title = "Metodo Newton";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <ul class="nav nav-pills nav-justified">
        <li role="presentation" class="active"><a href="#">@ViewBag.Title</a></li>
        <li role="presentation"><a href="#">Historial</a></li>
        <li role="presentation"><a href="#">Ayuda</a></li>
    </ul>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />

            <h2 class="col-md-offset-4">Entrada</h2>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-4">Ecuacion Primaria F(x)</label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.function1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.function1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Ecuacion Secundaria G(x)</label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.function2, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.function2, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Aproximacion Inicial</label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Aproximado, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Aproximado, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Tolerancia (Tol)</label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Tol, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Tol, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label  col-md-4 left">Numero de Iteraciones (N)</label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Iteraciones, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Iteraciones, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-4 col-md-10">
                    <input type="submit" value="Evaluar" class="btn btn-primary" name="submitbutton" />
                    <input type="submit" value="Limpiar" class="btn btn-warning" name="submitbutton" />
                </div>
            </div>
        </div>

        <div>
            @Html.Action("_Respuesta", Model.ans)
        </div>

    }



    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
<footer></footer>